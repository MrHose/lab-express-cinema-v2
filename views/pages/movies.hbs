<div class="container">
    <div>
        <h2>Ironhack Cinema</h2>
        <p>Click on the movie to check the showtimes!</p>
    </div>
    <div class="row">
        {{#each allMovies}}
        <div class="col-md-4">
            <img src="{{image}}" alt="{{title}}">
            <p>
                <bold>{{title}}</bold>
            </p>
            <a href="/details/{{id}}">See more</a>
        </div>
        {{/each}}
    </div>
</div>